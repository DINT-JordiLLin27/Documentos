<Window x:Class="WpfApp2.NuevoDoc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="NuevoDoc" Height="400" Width="500" Closing="Window_Closing" WindowStartupLocation="CenterScreen">

    <DockPanel>
        <Button x:Name="GuardarButton" DockPanel.Dock="Bottom" Margin="2" Click="GuardarButton_Click">Guardar</Button>
        <TextBox x:Name="DocumentoTextBox" AcceptsReturn="True"/>
    </DockPanel>
</Window>
